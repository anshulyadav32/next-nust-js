# Database Configuration
# Primary database URL (recommended for most uses with connection pooling)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Direct database connection (for uses requiring connection without pgbouncer)
DATABASE_URL_UNPOOLED=postgresql://username:password@host:port/database?sslmode=require

# Individual PostgreSQL connection parameters
PGHOST=your-postgres-host
PGHOST_UNPOOLED=your-postgres-host-direct
PGUSER=your-postgres-user
PGDATABASE=your-database-name
PGPASSWORD=your-postgres-password

# Vercel Postgres Template Variables
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_USER=your-postgres-user
POSTGRES_HOST=your-postgres-host
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=your-database-name
POSTGRES_URL_NO_SSL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?connect_timeout=15&sslmode=require

# JWT Authentication
# Generate secure random strings for production
JWT_SECRET=your-jwt-secret-key-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001

# Neon Auth environment variables (if using Neon Stack)
NEXT_PUBLIC_STACK_PROJECT_ID=your-stack-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-stack-publishable-key
STACK_SECRET_SERVER_KEY=your-stack-secret-server-key

# Email Configuration (for verification and password reset)
# For development, you can use Ethereal Email
# For production, use your actual SMTP settings
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your-email-user
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourapp.com

# OAuth Providers (optional)
AUTH_GOOGLE_ID=your-google-oauth-client-id
AUTH_GOOGLE_SECRET=your-google-oauth-client-secret
AUTH_GITHUB_ID=your-github-oauth-app-id
AUTH_GITHUB_SECRET=your-github-oauth-app-secret

# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=0.0.0.0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log