# Nuxt Frontend Environment Configuration

# API Configuration
# Backend API base URL (private - server-side only)
NUXT_API_BASE_URL=http://localhost:3001
# Public API base URL (exposed to client-side)
NUXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Server Configuration
NITRO_PORT=3002
NITRO_HOST=0.0.0.0

# NextAuth Configuration (if using NextAuth in frontend)
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production

# OAuth Providers (optional)
AUTH_GOOGLE_ID=your-google-oauth-client-id
AUTH_GOOGLE_SECRET=your-google-oauth-client-secret
AUTH_GITHUB_ID=your-github-oauth-app-id
AUTH_GITHUB_SECRET=your-github-oauth-app-secret

# Environment
NODE_ENV=development

# Public Configuration (exposed to client-side)
NUXT_PUBLIC_APP_NAME=Your App Name
NUXT_PUBLIC_APP_VERSION=1.0.0
NUXT_PUBLIC_SITE_URL=http://localhost:3002

# Email Configuration (for contact forms, etc.)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your-email-user
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourapp.com

# File Upload Configuration
NUXT_PUBLIC_MAX_FILE_SIZE=5242880
NUXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Analytics (optional)
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
NUXT_PUBLIC_GTAG_ID=your-gtag-id

# Feature Flags
NUXT_PUBLIC_ENABLE_REGISTRATION=true
NUXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NUXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true

# Azure PostgreSQL Configuration (if connecting directly from frontend - not recommended)
# Note: Direct database connections from frontend are not recommended for security
# These should typically only be used in server-side API routes
AZURE_POSTGRES_HOST=your_postgres_host.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_USER=your_username
AZURE_POSTGRES_DATABASE=your_database
AZURE_POSTGRES_PASSWORD=your_password
AZURE_POSTGRES_SSL=true

# Connection string format (if needed)
STRING_POSTGRES_HOST=postgres://your_username:your_password@your_postgres_host.postgres.database.azure.com:5432/your_database
